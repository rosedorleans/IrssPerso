{% extends 'base.html.twig' %}

{% block title %}New Calendar{% endblock %}

{% block body %}
    <h1 class="col-8 mx-auto py-4 text-center">Nouvel évènement</h1>

    {% for status, messages in app.flashes %}
        {% for message in messages %}
            <div class="bbg">
                <div class="container-fluid">
                    <div class="row">
                        <div class="my-2 d-flex justify-content-center">
                            <div class="alert alert-{{ status }} alert-dismissible fade show" role="alert">
                                <strong>
                                    {{ message }}
                                </strong>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"
                                        aria-label="Close"></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="col-6 mx-auto">

        {{ include('pages/calendar/_form.html.twig') }}

        <a href="{{ path('calendar_index') }}">back to list</a>
    </div>

{% endblock %}
