{% extends 'base.html.twig' %}

{% block title %}Calendar{% endblock %}

{% block stylesheets %}
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/css/bootstrap.css'>
    <style>
        {% for event in allEvents %}
            .card { border: 4px solid {{ event.categoryFormation.color }}; }}
        {% endfor %}
    </style>
{% endblock %}

{% block body %}

    <div class="container" id="filters">
        <div class="filters-menu">
            <h1>Filtrer les événements</h1>
            <a href="{{ path('event_calendar') }}">Retour au calendrier</a>
        </div>
        <div class="row">
            <div class="col-md-3">
                {% include 'pages/event/_filter.html.twig' with {form: form} only %}
            </div>
            <div class="col-md-9" id="filters-cards">
                <div class="grid">
                    {% for event in allEvents %}
                        {% include 'pages/event/_card.html.twig' with {event: event} only %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>




{% endblock %}
