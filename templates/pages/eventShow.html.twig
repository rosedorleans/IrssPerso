{% extends 'base.html.twig' %}

{% block title %}Calendar{% endblock %}

{% block stylesheets %}
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/css/bootstrap.css'>
    <style>
        {% for event in allEvents %}
            h1 u { text-decoration-color: {{ event.categoryFormation.color }}; }}
        {% endfor %}
    </style>
{% endblock %}

{% block body %}

    <div>
        <h1><u>{{ event.title }}</u> - {{ event.start ? event.start|date|format_date('full', locale='fr') }}</h1>
        <p>{{ event.description }}</p>
        <div>
            <h2>Date</h2>
            <ul>
                <li>{{ event.start ? event.start|date|format_date('full', locale='fr') }}</li>
                <li>
                    {{ event.start ? event.start|date|format_datetime('none', 'short', locale='fr')}}
                    -
                    {{ event.end ? event.end|date|format_datetime('none', 'short', locale='fr') }}
                </li>
            </ul>
            <h2>Lieu</h2>
            <p>{{ event.place}}</p>
        </div>
    </div>

    <a href="{{ path('event_calendar') }}">Retour aux dates cl√©s</a>


{% endblock %}
